{
  "name": "js-spec",
  "version": "0.1.45",
  "license": "LGPL-3.0",
  "homepage": "https://github.com/js-works/js-spec",
  "unpkg": "dist/js-spec.production.js",
  "jsdelivr": "dist/js-spec.production.js",
  "typings": "dist/types/js-spec.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/js-works/js-spec.git"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/mocha": "^2.2.48",
    "@types/node": "^8.0.0",
    "bestzip": "^1.1.6",
    "chai": "~3.4.1",
    "compression-webpack-plugin": "^1.1.11",
    "copyfiles": "^2.0.0",
    "cross-conf-env": "^1.1.2",
    "crypto.js": "^1.1.0",
    "mocha": "^2.3.4",
    "nyc": "^12.0.2",
    "rxjs": "^6.2.0",
    "shx": "^0.2.2",
    "symbol-observable": "^1.2.0",
    "ts-loader": "^4.3.1",
    "ts-node": "^6.1.0",
    "tslint": "^5.5.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.9.1",
    "webpack": "^4.11.1",
    "webpack-cli": "^3.0.2"
  },
  "scripts": {
    "clean": "shx rm -rf ./build ./dist ./coverage",
    "build-dev-umd": "webpack --env.mode=development --env.type=umd",
    "build-prod-umd": "webpack --env.mode=production --env.type=umd",
    "build-dev-cjs": "webpack --env.mode=development --env.type=cjs",
    "build-prod-cjs": "webpack --env.mode=production --env.type=cjs",
    "build-dev-amd": "webpack --env.mode=development --env.type=amd",
    "build-prod-amd": "webpack --env.mode=production --env.type=amd",
    "build-dev": "npm run build-dev-umd && npm run build-dev-cjs",
    "build-prod": "npm run build-prod-umd && npm run build-prod-cjs",
    "test": "nyc mocha -r ts-node/register src/test/**/*.ts",
    "test-watch": "mocha -w -r ts-node/register src/test/**/*.ts",
    "docs": "shx rm -rf ./dist/docs && \"node_modules/.bin/cross-conf-env\" typedoc --options typedoc.json src/main/api/ -name \"js-spec vnpm_package_version\"",
    "zipsource": "shx rm -rf ./build/source && shx mkdir -p ./build/source && copyfiles -a ./* ./build/source && shx cp -r ./src ./build/source && shx mkdir -p ./dist/source && cd build/source && bestzip ../../dist/source/source.zip . && cd ../..",
    "dist": "npm run clean && npm run test && npm run build-dev && npm run build-prod && npm run docs && npm run zipsource"
  },
  "nyc": {
    "temp-directory": "./coverage/.nyc_output",
    "include": [
      "src/main"
    ],
    "exclude": [
      "src/main/js-spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true
  }
}
